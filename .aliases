alias gaa='git add --all'
alias grss='git reset --soft HEAD~'
alias gop='git open'
alias gpdev='git pull framgia develop'
alias gpmas='git pull framgia master'
grip() {
  gaa; gc -m "a"; gri HEAD~"$1"; gp origin $(git_branch) -f; gop;
}
gap() {
  gaa; gc -S -m "$1"; gp origin $(git_branch); gop;
}
garp() {
  gaa; git commit --amend --no-edit; gp origin $(git_branch) -f; gop;
}
gca() {
  gaa; git commit --amend; gp origin $(git_branch) -f; gop;
}
grf() {
  git checkout $(git rev-list -n 1 HEAD -- "$1")^ -- "$1"
}

